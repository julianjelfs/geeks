@model IEnumerable<geeks.Models.FriendModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th width="40px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Email</td>
                <td>
                    <a href="#delete-warning" role="button" class="delete-friend btn" data-friend-email="@ev.Email"><i class="icon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>