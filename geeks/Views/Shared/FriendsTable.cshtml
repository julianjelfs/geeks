@model IEnumerable<geeks.Models.UserFriend>

@*@Html.Partial("FriendsPager")*@

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th width="40px"></th>
            <th width="40px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            var cls = ev.Rating > 0 ? "badge badge-warning" : "badge";
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Email</td>
                <td>
                    <button title="Rate your friend" role="button" class="rank-friend btn" data-userId="@ev.UserId"><span class="@cls">@ev.Rating</span></button>
                </td>
                <td>
                    <a href="#delete-warning" role="button" class="delete-friend btn" data-friend-email="@ev.UserId"><i class="icon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@*@Html.Partial("FriendsPager")*@