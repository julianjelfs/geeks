<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title - Geek's Dilemma</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
        
    @Styles.Render("~/bundles/css")
    <link href='http://fonts.googleapis.com/css?family=Russo+One|Press+Start+2P|Audiowide' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"> </script>
</head>
<body ng-app="geeks">
    <div class="container-fluid geeks-app" ng-controller="GeeksCtrl" ng-init="loggedInUser = '@User.Identity.Name'">
        <div class="row-fluid">
            <div class="span3 offset1 logo"></div>
            <div class="span7">
                <div class="row-fluid">
                    <ul id="nav-bar" class="nav nav-tabs">
                        <li id="home-nav" ng-class="isTabSelected('home-nav')">
                            <a ng-click="tab='home-nav'" href="/geeks/#/">Home</a>
                        </li>
                        <li id="events-nav" ng-class="isTabSelected('events-nav')">
                            <a ng-click="tab='events-nav'" href="/geeks/#/events">Events</a>
                        </li>
                        <li id="friends-nav" ng-class="isTabSelected('friends-nav')">
                            <a ng-click="tab='friends-nav'" href="/geeks/#/friends">Friends</a>
                        </li>
                        <li id="about-nav" ng-class="isTabSelected('about-nav')">
                            <a ng-click="tab='about-nav'" href="/geeks/#/about">About</a>
                        </li>

                        <li ng-show="!loggedIn()" id="register-nav" class="pull-right">
                            <a href="" ng-click="register()">Register</a>
                        </li>
                        <li ng-show="!loggedIn()" id="login-nav" class="pull-right">
                            <a href="" ng-click="signIn()">Sign in</a>
                        </li>
                        <li ng-show="loggedIn()" id="logout-nav" class="pull-right">
                            <a href="" ng-click="logoff()">Sign Out</a>
                        </li>
                        <li ng-show="loggedIn()" id="manage-nav" class="pull-right">
                            <a href='/geeks/#/manage'>{{loggedInUser}}</a>
                        </li>
                    </ul>
                </div>
                <div class="row-fluid">
                    <h1 class="geek pull-right">Geek's Dilemma</h1>    
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div ng-view class="span10 offset1">
                @RenderBody()
            </div>
        </div>
        <div class="row-fluid footer">
            <p class="span10 offset1">&copy; @DateTime.Now.Year - Geek's Dilemma</p>
        </div>
    </div>
    
    <login id="login"></login>
    
    <script src="https://apis.google.com/js/client.js?onload=handleClientLoad"></script>
    <script src="/geeks/js/jquery-1.9.1.js"> </script>
    <script src="/geeks/js/bootstrap.js"> </script>
    <script src="/geeks/js/angular.js"> </script>
    <script src="/geeks/js/angular-resource.js"> </script>
    <script src="/geeks/js/angular-http-auth.js"> </script>
    <script src="/geeks/js/angular-ui.js"> </script>
    <script src="/geeks/js/geeks.js"> </script>

</body>
</html>